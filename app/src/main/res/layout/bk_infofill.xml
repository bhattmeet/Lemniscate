<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Information Form"
                android:textSize="@dimen/_22ssp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:fontFamily="sans-serif"
                android:isScrollContainer="false"
                android:gravity="start"
                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:textColor="#FFF"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/bg_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title of Book"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/login_btn"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Author Name"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/login_btn"/>

            <Spinner
                android:id="@+id/product_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_18sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/login_btn"
                android:entries="@array/product_size"/>

            <Spinner
                android:id="@+id/binding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/login_btn"
                android:entries="@array/binding_array"/>

            <Spinner
                android:id="@+id/print_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/login_btn"
                android:entries="@array/print_array"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uploadfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp">
                <TextView
                    android:id="@+id/tv_uploadfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload File"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:textSize="@dimen/_22ssp"/>
                <Button
                    android:id="@+id/upload_file"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:drawableStart="@drawable/ic_link_black_24dp"
                    android:background="@drawable/round_btn"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:rippleColor="@color/colorPrimaryDark"
                    android:elevation="@dimen/_10sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_uploadcover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp">
                <TextView
                    android:id="@+id/tv_uploadcover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Cover"
                    android:layout_gravity="center"
                    android:textColor="#FFF"
                    android:textSize="@dimen/_22ssp"/>
                <Button
                    android:id="@+id/upload_cover"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:drawableStart="@drawable/ic_link_black_24dp"
                    android:background="@drawable/round_btn"
                    android:layout_gravity="center"
                    app:rippleColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:elevation="@dimen/_10sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2Rs. Cost per 1 Page"
                android:textStyle="bold"
                android:textColor="#FFF"
                android:textSize="@dimen/_20ssp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_15sdp"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/round_btn"
                android:drawableStart="@drawable/ic_check_black_24dp"
                android:gravity="center"
                app:rippleColor="@color/colorPrimaryDark"
                android:elevation="@dimen/_10sdp"
                android:paddingStart="@dimen/_11sdp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>